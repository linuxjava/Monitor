<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/athome_list_cell"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/select1"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:adjustViewBounds="true"
            android:background="@drawable/at_home_trigger_select1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/trigger_hold_cell_text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80.0dip"
            android:text=""
            android:textColor="#ff292f3a"
            android:textSize="16.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trigger_hold_cell_text2_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/trigger_hold_cell_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80.0dip"
            android:text=""
            android:textColor="#ff677688"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="22.0dip"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30.0dip"
            android:background="@drawable/at_home_trigger_select"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>